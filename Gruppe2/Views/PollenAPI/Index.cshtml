@model IEnumerable<Gruppe2.Models.PollenDisplayDto>

@{
    ViewData["Title"] = "Pollenvarsel";
}

<h1>Pollenvarsel â€“ neste 5 dagene</h1>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Code</th>
            <th>Display Name</th>
            <th>Value</th>
            <th>Category</th>
            <th>Index Description</th>
            <th>Color Info</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var row in Model)
        {
            <tr>
                <td>@row.Date</td>
                <td>@row.Code</td>
                <td>@row.DisplayName</td>
                <td>@row.Value</td>
                <td>@row.Category</td>
                <td>@row.IndexDescription</td>
                <td style="background-color: rgb(@(row.Red * 255), @(row.Green * 255), @(row.Blue * 255));">
                </td>
            </tr>
        }
    </tbody>
</table>