@model IEnumerable<Gruppe2.Models.IndexInfo>

@{
    ViewData["Title"] = "Pollenvarsel";
}

<h1>Pollenvarsel â€“ neste 5 dager</h1>

<table class="table">
    <thead>
        <tr>
            <th>Code</th>
            <th>Display Name</th>
            <th>Value</th>
            <th>Category</th>
            <th>Index Description</th>
            <th>Color Info</th>
        </tr>
    </thead>
   <tbody>
    @foreach (var cell in Model)
    {
        <tr>
            <td>@cell.Code</td>
            <td>@cell.DisplayName</td>
            <td>@cell.Category</td>
            <td>@cell.IndexDescription</td>
            <td>@cell.ColorInfo</td>
            <td style="background-color: rgb(@cell.ColorInfo.Red, @cell.ColorInfo.Green, @cell.ColorInfo.Blue);">
                @cell.Value
            </td>
        </tr>
    }
    </tbody>
</table>
